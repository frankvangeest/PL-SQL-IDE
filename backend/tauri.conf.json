{
  "build": {
    "devPath": "http://127.0.0.1:5500/code-editor.html",
    "distDir": "../frontend",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "PL-SQL-IDE",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "PL-SQL-IDE",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
